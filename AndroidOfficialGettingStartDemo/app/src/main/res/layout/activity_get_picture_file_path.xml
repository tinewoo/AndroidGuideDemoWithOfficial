<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.official.android.androidofficialguidedemo.otherlist.GetPictureFilePathActivity">

    <TextView android:id="@+id/tv_photopath"
        android:text="图片绝对路径" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/bt_photo"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="相册"
        android:layout_below="@id/tv_photopath"
        android:onClick="openPhotos"/>
    <ImageView android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_photo"/>

</RelativeLayout>
